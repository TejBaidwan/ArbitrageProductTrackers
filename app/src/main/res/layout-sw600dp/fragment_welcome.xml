<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".welcomePage.Welcome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcomeTitle"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/theme_green"
                android:fontFamily="@font/poppins"
                android:text="@string/welcomeTitle"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/theme_textblack"
                android:textSize="48sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/welcomeImage"
                android:layout_width="match_parent"
                android:layout_height="426dp"
                android:layout_margin="10sp"
                android:background="#FFEB3B"
                android:src="@drawable/appiconimage" />

            <TextView
                android:id="@+id/welcomeContent"
                android:layout_width="match_parent"
                android:layout_height="510dp"
                android:layout_margin="5sp"
                android:fontFamily="@font/poppins"
                android:text="@string/welcomeContent"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="24sp" />

            <Button
                android:id="@+id/webLinkOne"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_margin="10sp"
                android:backgroundTint="@color/theme_green"
                android:fontFamily="@font/poppins"
                android:text="@string/webLinkIntent"
                android:textColor="@android:color/black"
                android:textColorLink="@color/theme_textblack"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="@string/phoneHint"
                android:inputType="textPersonName|phone"
                android:minHeight="48dp"
                android:textColorHint="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/textIntentButton"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_margin="10sp"
                android:backgroundTint="@color/theme_green"
                android:fontFamily="@font/poppins"
                android:text="@string/textIntent"
                android:textColor="@android:color/black"
                android:textColorLink="@color/theme_textblack"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>