<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_offwhite"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".ProductDetailsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="388dp"
            android:layout_height="233dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/placeholder_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/alegreya_sans"
            android:paddingHorizontal="30dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/theme_textblack"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailImage" />

        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/detailDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/alegreya_sans"
            android:paddingHorizontal="30dp"
            android:text="TextView"
            android:textColor="@color/theme_textblack"
            android:textSize="16sp"
            app:colorClickableText="#292929"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailName"
            app:trimCollapsedText="@string/read_more"
            app:trimExpandedText="@string/read_less"
            app:trimLength="200"
            app:trimMode="trimModeLength" />

        <TextView
            android:id="@+id/detailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/alegreya_sans"
            android:text="TextView"
            android:textColor="@color/theme_textblack"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailDescription" />

        <ImageView
            android:id="@+id/detailStatBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/customcircle"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_stacked_line_chart_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/detailEditBtn" />

        <ImageView
            android:id="@+id/detailEditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/customcircle"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_edit_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/addToInvBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/theme_blue"
            android:text="Add to inventory"
            android:textColor="@color/white"
            app:icon="@drawable/ic_baseline_playlist_add_24"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ebayPrice"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="24dp"
            android:background="#FFFFFF"
            android:backgroundTint="@color/theme_blue"
            android:gravity="center"
            android:text="Price Unavailable"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_baseline_launch_24"
            app:layout_constraintBottom_toTopOf="@+id/detailStatBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailPrice"
            app:toggleCheckedStateOnClick="false" />

        <ImageView
            android:id="@+id/ebayImgView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="#FFFFFF"
            android:backgroundTint="#000000"
            android:src="@drawable/placeholder_image"
            app:layout_constraintEnd_toStartOf="@+id/ebayPrice"
            app:layout_constraintTop_toTopOf="@+id/ebayPrice"
            app:srcCompat="@drawable/ebay_logo"
            tools:srcCompat="@drawable/ebay_logo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>