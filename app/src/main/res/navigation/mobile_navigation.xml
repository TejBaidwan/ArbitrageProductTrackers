<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_recycler">
    <fragment
        android:id="@+id/nav_recycler"
        android:name="com.example.arbitragetracker.productRecycler.ProductRecycler"
        android:label="My Products"
        tools:layout="@layout/fragment_product_recycler" />
    <fragment
        android:id="@+id/nav_welcome"
        android:name="com.example.arbitragetracker.welcomePage.Welcome"
        android:label="Welcome!"
        tools:layout="@layout/fragment_welcome" />
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.example.arbitragetracker.ProductDetailsFragment"
        android:label="ProductDetails"
        tools:layout="@layout/fragment_product_details" />
    <fragment
        android:id="@+id/nav_stats"
        android:name="com.example.arbitragetracker.statistics.ViewPagerHostFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_view_pager_host" />
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.arbitragetracker.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/nav_credits"
        android:name="com.example.arbitragetracker.credits.CreditsFragment"
        android:label="Credits"
        tools:layout="@layout/fragment_credits" />
</navigation>